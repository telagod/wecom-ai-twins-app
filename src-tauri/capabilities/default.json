{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-kill",
    "shell:allow-stdin-write",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        { "name": "binaries/bun", "sidecar": true, "args": true },
        { "name": "bun", "cmd": "bun", "args": true, "sidecar": false },
        { "name": "node", "cmd": "node", "args": true, "sidecar": false },
        { "name": "openclaw", "cmd": "openclaw", "args": true, "sidecar": false }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        { "name": "binaries/bun", "sidecar": true, "args": true },
        { "name": "bun", "cmd": "bun", "args": true, "sidecar": false },
        { "name": "openclaw", "cmd": "openclaw", "args": true, "sidecar": false }
      ]
    }
  ]
}
