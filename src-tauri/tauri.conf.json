{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WeCom AI Twins",
  "version": "0.1.0",
  "identifier": "com.telagod.wecom-ai-twins",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WeCom AI Twins",
        "width": 960,
        "height": 680,
        "minWidth": 720,
        "minHeight": 480
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws: wss:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
